# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================
# This file contains all environment variables needed for the Python backend
# Copy this file to ../.env.local (project root) and fill in your actual values
# The backend looks for .env.local in the project root directory (parent of backend/)

# ============================================
# REQUIRED - LiveKit Configuration
# ============================================
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_URL=wss://your-livekit-server.com
LIVEKIT_AGENT_NAME=my-interviewer

# ============================================
# REQUIRED - Speech-to-Text (Deepgram)
# ============================================
DEEPGRAM_API_KEY=your_deepgram_api_key
DEEPGRAM_MODEL=nova-2
DEEPGRAM_LANGUAGE=en
DEEPGRAM_SMART_FORMAT=true
DEEPGRAM_INTERIM_RESULTS=true

# ============================================
# REQUIRED - Text-to-Speech (ElevenLabs)
# ============================================
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=LQMC3j3fn1LA9ZhI4o8g
ELEVENLABS_MODEL=eleven_multilingual_v2

# ============================================
# REQUIRED - Large Language Model (Google Gemini)
# ============================================
# Use either GOOGLE_API_KEY or GOOGLE_GENAI_API_KEY (not both)
GOOGLE_API_KEY=your_google_api_key
# OR: GOOGLE_GENAI_API_KEY=your_google_api_key
GOOGLE_LLM_MODEL=gemini-2.0-flash-exp

# ============================================
# REQUIRED - Database (Supabase)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ============================================
# OPTIONAL - Email (SMTP) - Recommended
# ============================================
# If not configured, email sending will be skipped but app will still work
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Codegnan Team
SMTP_FROM_EMAIL=noreply@codegnan.com

# ============================================
# OPTIONAL - Avatar (Tavus)
# ============================================
# If not configured, agent will use ElevenLabs TTS only
TAVUS_API_KEY=your_tavus_api_key
TAVUS_PERSONA_ID=your_persona_id
TAVUS_REPLICA_ID=your_replica_id

# ============================================
# OPTIONAL - Voice Activity Detection (Silero VAD)
# ============================================
SILERO_MIN_SPEECH_DURATION=0.1
SILERO_MIN_SILENCE_DURATION=1.2

# ============================================
# OPTIONAL - Server Configuration
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
# Use either FRONTEND_URL or NEXT_PUBLIC_APP_URL (NEXT_PUBLIC_APP_URL takes precedence)
FRONTEND_URL=http://localhost:3000
# OR: NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# OPTIONAL - Logging
# ============================================
LOG_LEVEL=INFO
# LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

